@import 'base'

/*Variables*/
$c_selected_object = #0f6d2e
$c_hover_object = #888a85
$panel_color = rgba(0,0,0,0.8)

/*Mixins*/
hoverSlide()
	border 6px dotted $primary_color
	cursor move

hoverComponent()
	border 1px dotted $c_hover_object
	cursor pointer

selectedSlide()
	border 6px solid $primary_color

selectedComponent()
	border 1px solid $c_hover_object

iconBtn()
	padding 0px 10px 0px 10px
	line-height 0px
	color $primary_color
	z-index 1

optionsPanel()
	background-color $panel_color
	border-radius 0px 0px 10px 10px
	z-index 1
	position absolute

	.button
		background-color $secondary_color
		border-radius 5px
		float left
		margin-left 6px
		margin-right 6px
		margin-top 8px
		margin-bottom 8px
		font-size 2.4em
		padding-left 10px
		padding-right 10px
		padding-top 2px
		padding-bottom 2px

.non-selectable-text
	user-select none

#loading-screen
	background-color #FFFFFF
	height 100%
	position fixed
	width 100%
	z-index 2

	#loading-icon
		display block
		margin-left auto
		margin-right auto
		margin-top 10%
		width 15%

	#logo
		display block
		margin-left auto
		margin-right auto
		width 18%

#slides-bar
	position absolute
	overflow auto
	float left
	width 10%
	height 100%
	user-select none
	background-color $panel_color
	z-index 1

	#slides-list
		list-style none
		margin-top 6px
		margin-left 3px
		margin-right 3px

		.slide-mini
			height 100px
			border 2px solid #000
			margin-bottom 15px

			&.selected
				border 3px solid $primary_color

			.btn-delete
				display none

				canvas
					border-radius 8px

			&:hover
				border 2px solid $primary_color

				.btn-delete
					display block
					position absolute
					z-index 1
					color #9c3131
					font-size 1.3em

#btn-add-slide
	position absolute
	left 11%;
	top 1%
	font-size 4em
	iconBtn()

#btn-navigation-mode
	position absolute
	left 11%;
	top 12%
	font-size 4em
	iconBtn()

#btn-slide-background-color
	position absolute
	font-size 3em
	z-index 1
	bottom 12%
	left 11%
	padding 0 8px

#btn-slide-notes
	position absolute
	font-size 3em
	z-index 1
	bottom 12%
	left 16%
	padding 0 8px

#btn-exit-preview-mode
	position absolute
	right 2%
	top 1%
	z-index 1

#btn-edit-presentation
	font-size 4em
	iconBtn()

#btn-delete-slide
	font-size 4em
	iconBtn()

#right-panel
	position absolute
	right 0
	bottom 0
	height 100%
	width 15%
	background-color $panel_color
	z-index 1

	#btn-preview-presentation
		font-size 5em
		iconBtn()
		width 100%
		margin-top 5%
		border-radius 12px 0px 0px 12px

	ul#main-menu
		li
			background-color $secondary_color
			border-radius 12px 0px 0px 12px
			text-align center
			padding-top 5%
			padding-bottom 5%

			a
				font-size 1.2em

	#collaborators-title
		color $secondary_color

	#collaborative
		#user-list
			list-style none

			.user
				background-color $secondary_color
				width 15%
				text-align center
				font-size 1.3em
				border-radius 8px
				float left
				margin-left 3px
				margin-right 3px

		#chat
			#chat-messages
				height 145px
				overflow-y auto

				#message-list
					list-style none

					.message
						color $secondary_color

			#chat-form
				#message-text
					margin 0px
					border-radius 8px
				/*#btn-send-message
					float right
					padding 7px*/
#new-component-box
	optionsPanel()

	left 22%

	/*.button
			background-color $secondary_color
			border-radius 5px
			float left
			margin-left 6px
			margin-right 6px
			margin-top 8px
			margin-bottom 8px
			font-size 2.4em
			padding-left 10px
			padding-right 10px
			padding-top 2px
			padding-bottom 2px	*/

	/*a
		iconBtn()*/

#toolbox-container
	optionsPanel()

	right 22%

	#bold-btn
		margin-left 35px

	#link-btn
		margin-left 35px

#slide-options
	position absolute
	optionsPanel()
	right 22%

	label
		color $secondary_color
		font-weight bold
		margin-left 30%

	#change-size
		margin-top 3%

	#btn-delete-slide
		&:hover
			color #b43636

/* Slide */
.step
	border 1px dotted #808080

	&.hoverable
		&:hover
			hoverSlide()

	/* When a slide is selected */
	&.selected
		selectedSlide()

	&.borderless
		border none

/*Component*/
.component
	white-space nowrap
	padding 4px
	position absolute
	padding-top 1px
	padding-left 1px

	&.hoverable
		&:hover
			hoverComponent()

	/*&:hover
		hoverComponent()
		cursor pointer*/

	.component-options
		position absolute
		/*top -110%
		left -13%*/
		transform translate(-48px, -12px)
		z-index 1

		.btn-edit-text
			display block

		.btn-delete-component
			display block

			&:hover
				color #b43636

	.component-text-tools
		position absolute
		top -45px
		background-color #808080
		z-index 1

	&.selected-component
		selectedComponent()

	.text-placeholder
		position absolute
		color #949494

#themes-window
	#themes-list
		.theme-item
			text-align center
			border 2px solid white

			&:hover
				border 2px solid $primary_color

.ui-resizable-se
	width 50px
	height 50px
	right -50px
	bottom -50px